#include <iostream>
#include <math.h>;
using namespace std;

int main()
{
  float x1,y1,x2,y2,x3,y3,a,b,c,p,s;
  cin>>x1>>y1>>x2>>y2>>x3>>y3;
  a=sqrt(pow(x1-x2,2)+pow(y1-y2,2));
  b=sqrt(pow(x3-x2,2)+pow(y3-y2,2));
  c=sqrt(pow(x1-x3,2)+pow(y1-y3,2));
  p=a+b+c;
  s=sqrt(p/2*(p/2-a)*(p/2-b)*(p/2-c));
  cout<<p<<" "<<s<<endl;
}
